<Window x:Class="M017.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M017"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="200" WindowStartupLocation="CenterScreen">
    <StackPanel>
		<TextBlock x:Name="Output"/>
		<ProgressBar x:Name="Progress" Maximum="10" Height="30"/>
		<Button Content="Start" Click="Button_Click"/>
	</StackPanel>
</Window>
